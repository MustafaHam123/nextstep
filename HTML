<script>

// Register GSAP ScrollTrigger

gsap.registerPlugin(ScrollTrigger);

// Dark mode support

if (window.matchMedia && window.matchMedia('(prefers-color-scheme: dark)').matches) {

document.documentElement.classList.add('dark');

}

window.matchMedia('(prefers-color-scheme: dark)').addEventListener('change', event => {

if (event.matches) {

document.documentElement.classList.add('dark');

} else {

document.documentElement.classList.remove('dark');

}

});

// Mobile Menu Functions

function toggleMobileMenu() {

const menu = document.getElementById('mobileMenu');

menu.classList.toggle('open');

}

function closeMobileMenu() {

const menu = document.getElementById('mobileMenu');

menu.classList.remove('open');

}

// Close mobile menu when clicking outside

document.addEventListener('click', function(event) {

const menu = document.getElementById('mobileMenu');

const button = document.querySelector('.mobile-menu-button');

if (!menu.contains(event.target) && !button.contains(event.target)) {

menu.classList.remove('open');

}

});

// Main initialization

document.addEventListener('DOMContentLoaded', function() {

const isDesktop = window.matchMedia('(hover: hover) and (pointer: fine)').matches;

// Desktop-only effects

if (isDesktop) {

// Hero Animation Setup

const tl = gsap.timeline({

defaults: {

duration: 2,

yoyo: true,

ease: 'power2.inOut'

}

})

.fromTo('.left, .right', {

svgOrigin: '640 360',

skewY: (i) => [-30, 15][i],

scaleX: (i) => [0.6, 0.85][i],

x: 200

}, {

skewY: (i) => [-15, 30][i],

scaleX: (i) => [0.85, 0.6][i],

x: -200

})

.play(0.5);

// Text sliding animation

const tl2 = gsap.timeline();

document.querySelectorAll('text').forEach((t, i) => {

tl2.add(

gsap.fromTo(t, {

xPercent: -100,

x: 700

}, {

duration: 1,

xPercent: 0,

x: 0,

ease: 'sine.inOut'

}),

i % 3 * 0.2

);

});

// Mouse movement control

window.addEventListener('pointermove', (e) => {

tl.pause();

tl2.pause();

gsap.to([tl, tl2], {

duration: 2,

ease: 'power4',

progress: e.clientX / window.innerWidth

});

});

// Magnetic effect for cards

document.querySelectorAll('.magnetic-card').forEach(card => {

card.addEventListener('mousemove', (e) => {

const rect = card.getBoundingClientRect();

const x = e.clientX - rect.left;

const y = e.clientY - rect.top;

const centerX = rect.width / 2;

const centerY = rect.height / 2;

const deltaX = (x - centerX) / centerX;

const deltaY = (y - centerY) / centerY;

gsap.to(card, {

duration: 0.3,

x: deltaX * 5,

y: deltaY * 5,

rotationX: deltaY * 2,

rotationY: deltaX * 2,

ease: 'power2.out',

transformPerspective: 1000

});

});

card.addEventListener('mouseleave', () => {

gsap.to(card, {

duration: 0.5,

x: 0,

y: 0,

rotationX: 0,

rotationY: 0,

ease: 'power2.out'

});

});

});

// Interactive background following mouse

document.querySelectorAll('.section-hover').forEach(section => {

section.addEventListener('mousemove', (e) => {

const rect = section.getBoundingClientRect();

const x = ((e.clientX - rect.left) / rect.width) * 100;

const y = ((e.clientY - rect.top) / rect.height) * 100;

const bg = section.querySelector('.interactive-background');

if (bg) {

bg.style.setProperty('--mouse-x', x + '%');

bg.style.setProperty('--mouse-y', y + '%');

}

});

});

// Floating particles

function createParticles() {

document.querySelectorAll('.floating-particles').forEach(container => {

setInterval(() => {

const particle = document.createElement('div');

particle.className = 'particle';

particle.style.left = Math.random() * 100 + '%';

particle.style.animationDelay = Math.random() * 2 + 's';

container.appendChild(particle);

setTimeout(() => {

particle.remove();

}, 12000);

}, 1000);

});

}

createParticles();

// Motion Blur Cursor Effect

initMotionBlurEffect();

}

// Universal scroll-triggered animations (work on mobile too)

gsap.utils.toArray('.text-reveal').forEach((element, i) => {

// Check if element is in team section for faster animation

const isTeamSection = element.closest('#team-section');

gsap.fromTo(element, {

opacity: 0,

y: 30

}, {

opacity: 1,

y: 0,

duration: 0.8,

ease: 'power2.out',

scrollTrigger: {

trigger: element,

start: isTeamSection ? 'top 90%' : 'top 85%', // Earlier trigger for team section

end: 'bottom 15%',

toggleActions: 'play none none reverse'

},

delay: isTeamSection ? i * 0.05 : i * 0.1 // Faster stagger for team section

});

});

});

// Motion Blur Cursor Effect (Desktop Only)

function initMotionBlurEffect() {

const motionBlurEffect = {

boxes: [],

mousePosition: { x: 0, y: 0 },

isMoving: false,

init() {

this.createBoxes();

this.setupEventListeners();

this.animate();

},

createBoxes() {

const container = document.querySelector('.motion-blur-container');

for (let i = 0; i < 25; i++) {

const box = document.createElement('div');

box.className = 'motion-blur-box';

container.appendChild(box);

this.boxes.push({

element: box,

x: 0,

y: 0,

targetX: 0,

targetY: 0,

delay: i * 0.02,

speed: 0.1 + (i * 0.005)

});

}

},

setupEventListeners() {

const cursorDot = document.querySelector('.cursor-dot');

const cursorRing = document.querySelector('.cursor-ring');

document.addEventListener('mousemove', (e) => {

this.mousePosition.x = e.clientX;

this.mousePosition.y = e.clientY;

this.isMoving = true;

// Update custom cursor

cursorDot.style.left = (e.clientX - 4) + 'px';

cursorDot.style.top = (e.clientY - 4) + 'px';

cursorRing.style.left = (e.clientX - 20) + 'px';

cursorRing.style.top = (e.clientY - 20) + 'px';

clearTimeout(this.stopTimeout);

this.stopTimeout = setTimeout(() => {

this.isMoving = false;

}, 150);

});

// Enhanced hover effects for interactive elements

document.querySelectorAll('a, button, [role="button"], .magnetic-card').forEach(el => {

el.addEventListener('mouseenter', () => {

cursorRing.style.transform = 'scale(1.5)';

cursorRing.style.borderColor = 'rgba(121, 30, 255, 0.6)';

cursorDot.style.transform = 'scale(1.5)';

});

el.addEventListener('mouseleave', () => {

cursorRing.style.transform = 'scale(1)';

cursorRing.style.borderColor = 'rgba(121, 30, 255, 0.3)';

cursorDot.style.transform = 'scale(1)';

});

});

},

animate() {

this.boxes.forEach((box, index) => {

if (this.isMoving) {

box.targetX = this.mousePosition.x - 10;

box.targetY = this.mousePosition.y - 10;

box.x += (box.targetX - box.x) * box.speed;

box.y += (box.targetY - box.y) * box.speed;

const distance = Math.sqrt(

Math.pow(box.targetX - box.x, 2) +

Math.pow(box.targetY - box.y, 2)

);

const opacity = Math.max(0, Math.min(1, (1 - index / this.boxes.length) * (1 - distance / 100)));

box.element.style.opacity = opacity;

box.element.classList.add('active');

} else {

const currentOpacity = parseFloat(box.element.style.opacity) || 0;

box.element.style.opacity = Math.max(0, currentOpacity - 0.05);

if (currentOpacity <= 0) {

box.element.classList.remove('active');

}

}

box.element.style.left = box.x + 'px';

box.element.style.top = box.y + 'px';

const scale = 0.3 + (1 - index / this.boxes.length) * 0.7;

box.element.style.transform = `scale(${scale})`;

});

requestAnimationFrame(() => this.animate());

}

};

motionBlurEffect.init();

}

// Smooth scrolling for anchor links

document.querySelectorAll('a[href^="#"]').forEach(anchor => {

anchor.addEventListener('click', function (e) {

e.preventDefault();

const target = document.querySelector(this.getAttribute('href'));

if (target) {

// Close mobile menu if open

closeMobileMenu();

target.scrollIntoView({

behavior: 'smooth',

block: 'start'

});

}

});

});

// Performance optimization for low-end devices

if (navigator.hardwareConcurrency && navigator.hardwareConcurrency < 4) {

document.documentElement.style.setProperty('--animation-duration', '0.5s');

}

</script>

</body>

</html>
